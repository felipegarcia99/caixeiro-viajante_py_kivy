                    width: 1.5

    GridLayout:
        id: Grid2
        size_hint_x: .3
        rows: 2

        canvas.before:
            Color:
                rgba: 0, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        LbScore:
            halign: 'center'
            text_size: Grid2.width, None
            size: self.texture_size
            bold: True
            font_size: 25
            color: 0, 0, 0, 1

        ButtonComecar:
            size_hint_y: .2
